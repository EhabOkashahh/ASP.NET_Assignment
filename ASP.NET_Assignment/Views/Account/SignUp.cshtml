@model SignUpDto
@{
    ViewData["Title"] = "SignUp";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<form asp-action="SignUp">
    <h2>Form Validation</h2>
    <center class="alert-danger"><div asp-validation-summary="All"></div></center>
    <div class="form-group">
        <label asp-for="UserName"></label>
        <input asp-for="UserName" type="text" placeholder="Enter your username">
        <span asp-validation-for="UserName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="FirstName"></label>
        <input asp-for="FirstName" type="text" placeholder="Enter your username">
        <span asp-validation-for="FirstName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="LastName"></label>
        <input asp-for="LastName" type="text" placeholder="Enter your username">
        <span asp-validation-for="LastName" class="text-danger"></span>
    </div>
    <div class="form-group email">
        <label asp-for="Email"></label>
        <input asp-for="Email" id="email" placeholder="Enter your email address">
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <div class="form-group password">
        <label asp-for="Password"></label>
        <input asp-for="Password" placeholder="Enter your password">
        <span asp-validation-for="Password" class="text-danger"></span>
        <i id="pass-toggle-btn" class="fa-solid fa-eye"></i>
    </div>
    <div class="form-group password">
        <label asp-for="ConfirmPassword"></label>
        <input asp-for="ConfirmPassword" placeholder="Enter your password">
        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
        <i id="pass-toggle-btn" class="fa-solid fa-eye"></i>
    </div>
    <div class="checkDiv">
        <div class="innerdiv">
            <input asp-for="IsAgree" class="check" type="checkbox">
            <label asp-for="IsAgree" class="IsAgree">Do you agree to our Terms & Conditions</label>
            <span asp-validation-for="IsAgree" class="text-danger"></span>
        </div>
    </div>
    
    <div class="form-group submit-btn">
        <input type="submit" value="Submit">
    </div>
    <div class="form-group">
        <p>Already Have an Account? <a class="text-success" href="SignIn">Signin Now!</a></p>
    </div>
</form>
@section ValidationSection {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}
