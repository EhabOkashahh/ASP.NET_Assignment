@model SignInDto
@{
    ViewData["Title"] = "SignIn";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}


    <center class="alert-danger"><div asp-validation-summary="All"></div></center>
    <div class="form-group">
        <label asp-for="Email"></label>
        <input asp-for="Email" type="text" placeholder="Enter your Email">
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <div class="form-group password" style="position: relative;">
        <label asp-for="Password"></label>
        <input asp-for="Password" placeholder="Enter your password" id="passwordInput">
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>
    <div class="checkDiv">
        <div class="innerdiv">
            <input asp-for="RememberMe" class="check" type="checkbox">
            <label asp-for="RememberMe" class="IsAgree"></label>
        </div>
    </div>
    <div class="form-group submit-btn">
        <input type="submit" value="Submit">
    </div>
    <div class="form-group">
        <p>Don't Have an Account? <a class="text-success" href="SignUp">Create new Account!</a></p>
    </div>
@section ValidationSection {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}
