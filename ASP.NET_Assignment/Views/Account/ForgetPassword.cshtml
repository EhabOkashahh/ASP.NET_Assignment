@model ForgetPasswordDto
@{
    ViewData["Title"] = "ForgetPassword";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<center class="alert-danger"><div asp-validation-summary="All"></div></center>
<div class="form-group">
    <label asp-for="@Model.Email"></label>
    <input asp-for="@Model.Email" type="text" placeholder="Enter your Email">
    <span asp-validation-for="@Model.Email" class="text-danger"></span>
</div>
<div class="form-group submit-btn">
    <input class="btn" type="submit" value="Reset Password" asp-action="SendResetEmailURL"/>
</div>
@section ValidationSection {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}

