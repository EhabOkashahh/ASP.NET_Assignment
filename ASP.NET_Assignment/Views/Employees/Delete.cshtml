@model Employee 

@{
    ViewData["Title"] = "Delete";
}

<center>
        <h1>Choose Deletion Method</h1>
    <form asp-action="Delete" method="post">
        <select name="deleteOption" class="form-select">
            <option value="0"></option>
            <option value="1">Deactivate</option>
            <option value="2">Delete</option>
        </select>

        <button type="submit" class=" mt-3 btn btn-danger">Confirm</button>
    </form>


    @if (ViewBag.ErrorMessage != null)
    {
        <div class="m-3 alert alert-danger">@ViewBag.ErrorMessage</div>
    }


</center>



  
