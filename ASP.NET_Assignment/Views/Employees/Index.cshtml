@model IEnumerable<Employee>

@{
    ViewData["Title"] = "Index";
}

<h1 class="m-3">All Employees</h1>


<div >
    <form class="d-flex justify-content-around">
        <input class="form-control" placeholder="Enter Name" id="txt" name="SearchText">
        <button class="btn btn-success">Search</button>
    </form>
</div>

<a asp-action="Create" asp-controller="Employees" class="btn btn-primary m-4">Create Employee</a>

@if (Model.Count() > 0)
{
    <table id="table" class="table table-hover table-striped">
        <thead>
            <tr>
                <th>Photo</th>
                <th>Id</th>
                <th>Name</th>
                <th>Age</th>
                <th>Salary</th>
                <th>Address</th>
                <th>Phone</th>
                <th>Email</th>
                <th>Is Active</th>
                <th>Is Deleted</th>
                <th>Hire Date</th>
                <th>Date Of Creation</th>
                <th>Department Name</th>
                <th>Details</th>
                <th>Update</th>
                <th>Delete</th>
            </tr>

        </thead>
        <tbody id="table-body">
            @foreach (var item in Model)
            {
                <tr>
                    <td><img class="w-75" src="~/Files/Images/@item.ImageName" alt=@item.ImageName></img></td>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <td>@item.Age</td>
                    <td>@item.Salary</td>
                    <td>@item.Address</td>
                    <td>@item.Phone</td>
                    <td>@item.Email</td>
                    <td>@item.IsActive</td>
                    <td>@item.IsDeleted</td>
                    <td>@item.HireDate</td>
                    <td>@item.DateOfCreation</td>
                    @if (item.Department is not null)
                    {
                        <td>@item.Department.Name</td>
                    }
                    else
                    {
                        <td>No Department</td>
                    }
                    <partial name="_ButtonPartialViews" model="@item.Id" />
                </tr>

            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-info">
        <h4>There are no Employee</h4>
    </div>
}
