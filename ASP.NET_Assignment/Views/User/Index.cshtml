@model IEnumerable<UserToReturnDto>
@{
    ViewData["Title"] = "Index";

}

<h1>All Users</h1>
<div class="mb-4">
    <form class="d-flex justify-content-around">
        <input class="form-control" placeholder="Enter Name" id="txt" name="SearchText">
        <button class="btn btn-success">Search</button>
    </form>
</div>

@if (Model.Count() > 0)
{
    <table id="table" class="table table-hover table-striped">
        <thead>
            <tr>
                <th></th>
                <th>Id</th>
                <th>Username</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Email</th>
                <th>Roles</th>
                <th>Edit</th>
                <th>Update</th>
                <th>Delete</th>
            </tr>

        </thead>
        <tbody id="table-body">
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @if (item.Id == ViewBag.LoggedInUser)
                        {
                        <i class="bi bi-person-fill"></i>
                        }
                    </td>
                    <td>@item.Id</td>
                    <td>@item.UserName</td>
                    <td>@item.FirstName</td>
                    <td>@item.LastName</td>
                    <td>@item.Email</td>
                    <td>
                        @foreach (var role in item.Roles)
                        {
                        <span class="badge rounded-pill bg-primary">@role</span>
                        }
                    </td>
                    <partial name="_ButtonPartialViews" model="@item.Id" />
                </tr>

            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-info">
        <h4>There are no users</h4>
    </div>
}

