@model IEnumerable<Department>
@{
    ViewData["Title"] = "Index";
    string? Message = TempData["Message"] as string;
}

<h1>All Departments</h1>
<a asp-action="Create" asp-controller="Department" class="btn btn-primary m-4">Create Department</a>
@if(Message is not null){
<div class="alert-success p-2" >
    <h4>@Message</h4>
</div>
}

@if(Model.Count() > 0)
{
    <table class="table table-hover table-striped">
        <thead>
            <tr>
                <th>Code</th>
                <th>Name</th>
                <th>Date Of Creation</th>
                <th>Details</th>
                <th>Update</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var item in Model)
            {
                <tr>
                    <td>@item.Code</td>
                    <td>@item.Name</td>
                    <td>@item.DateOfCreation</td>
                    <partial name="_ButtonPartialViews" model="@item.Id.ToString()" />
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-info">
        <h4>There are no Departments</h4>
    </div>
}

