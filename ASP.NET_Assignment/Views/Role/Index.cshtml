@model IEnumerable<RoleToReturnDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>All Roles</h1>

<div class="mb-4">
    <form class="d-flex justify-content-around">
        <input class="form-control" placeholder="Enter Name" id="txt" name="SearchText">
        <button class="btn btn-success">Search</button>
    </form>
</div>

<a asp-action="Create" class="btn btn-primary m-4">Create Role</a>


@if (Model.Count() > 0)
{
    <table id="table" class="table table-hover table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Details</th>
                <th>Update</th>
                <th>Delete</th>
            </tr>

        </thead>
        <tbody id="table-body">
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <partial name="_ButtonPartialViews" model="@item.Id" />
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-info">
        <h4>There are no Roles</h4>
    </div>
}

